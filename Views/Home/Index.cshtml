    <script>
        $(document).ready(function () {
            $(".fancybox").fancybox({
                openEffect: "none",
                closeEffect: "none"
            });

            $(".zoom").hover(function () {

                $(this).addClass('transition');
            }, function () {

                $(this).removeClass('transition');
            });
        });

    </script>
}

<section>
    <div id="main_slider" class="section carousel slide banner-main" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#main_slider" data-slide-to="0" class="active"></li>
            <li data-target="#main_slider" data-slide-to="1"></li>
            <li data-target="#main_slider" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Products.Count(); i++)
            {
                <div class="@("carousel-item" + (i == 0 ? " active" : ""))">
                    <div class="container">
                        <div class="row marginii">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <div class="carousel-caption ">
                                    <h1>@Model.Products.ElementAt(i).Name</h1>
                                    <p class="productDescription">@Model.Products.ElementAt(i).ShortDescription</p>
                                    <p class="productPrice">ფასი: @Model.Products.ElementAt(i).Price ლარი</p>
                                    <a class="btn btn-lg btn-primary" href="#" role="button">მეტი ინფორმაცია</a>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <div class="img-box">
                                    <figure><img src="@Model.Products.ElementAt(i).ImageThumbnailUrl" alt="img" /></figure>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
            <i class='fa fa-angle-left'></i>
        </a>
        <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
            <i class='fa fa-angle-right'></i>
        </a>
    </div>
</section>
