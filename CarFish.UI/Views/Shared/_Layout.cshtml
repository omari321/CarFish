@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IProductRepository _productRepository
@{
    var curYear = DateTime.Now.Year.ToString();
    var categories = _productRepository.GetCategories().Where(c => c.ShowInHomePage).ToList();
    var isDatalex = false;
    if (ViewBag.Datalex != null)
        isDatalex = true;
}
<!DOCTYPE html>
<html lang="en">
<head>
    @if (isDatalex)
    {
        <title>@ViewData["Title"] - Datalex</title>
    }
    else
    {
        <title>@ViewData["Title"] - CarFish</title>
    }
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="format-detection" content="telephone=no">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- style css -->
    @if (isDatalex)
    {
        <link rel="stylesheet" href="~/css/style-datalex.css">
    }
    else
    {
        <link rel="stylesheet" href="~/css/style.css">
    }
    <!-- Responsive-->
    <link rel="stylesheet" href="~/css/responsive.css">
    @RenderSection("Styles", false)
    <link rel="stylesheet" href="~/css/custom.css">
    @if (isDatalex)
    {
        <link rel="icon" type="image/x-icon" href="~/favicon_datalex.png">
    }
    else
    {
        <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    }
</head>
<body class="main-layout">
    <!-- header -->
    <header class="section">
        <!-- header inner -->
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                        <div class="full">
                            <div class="center-desk">
                                <div class="logo@(isDatalex ? "datalex" : "")">
                                    <a asp-action="Index" asp-controller="Home">
                                        @if (isDatalex)
                                        {
                                            <img src="~/img/logo_datalex.png" alt="#">
                                        }
                                        else
                                        {
                                            <img src="~/img/logo.png" alt="#">
                                        }
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                        <div class="menu-area">
                            <div class="limit-box">
                                <nav class="main-menu">
                                    <ul class="menu-area-main">
                                        <li> <a asp-action="Index" asp-controller="Home">მთავარი</a> </li>
                                        <li>
                                            <div class="dropdown">
                                                <a asp-action="List" asp-area="@(isDatalex ? "Datalex" : "")"  asp-controller="Product" class="dropbtn">პროდუქტები</a>
                                                <div class="dropdown-content">
                                                    @foreach (var c in categories)
                                                    {
                                                        <a asp-action="List" asp-area="@(isDatalex ? "Datalex" : "")" asp-controller="Product" asp-route-page="1" asp-route-category="@c.Id">@c.Name</a>
                                                    }
                                                </div>
                                            </div>
                                        </li>
                                        <li> <a asp-action="Categories" asp-controller="Product">კატეგორიები</a> </li>
                                        <li><a asp-action="ContactUs" asp-controller="Home">მიტანის პირობები</a></li>
                                        @*<li class="side-menu">
                                            <a id="carty" href="#">
                                                <img style="max-width:9%" src="~/img/shopping-cart.png">
                                            </a>
                                        </li>*@
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end header inner -->
    </header>
    <!-- end header -->
    @RenderBody()
    <div id="footer" class="Address layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="titlepage">
                        <div class="main">
                            <h1 class="address_text">საკონტაქტო ინფორმაცია</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="address_2">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-4">
                        <div class="site_info">
                            <span class="info_icon">
                                @if (isDatalex)
                                {
                                    <img src="~/img/map-icon_datalex.png"/>
                                }
                                else
                                {
                                    <img src="~/img/map-icon.png" />
                                }
                            </span>
                            <span style="margin-top: 14px;font-size: 1.2rem;">მოსკოვის გამზირი</span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-4">
                        <div class="site_info">
                            <span class="info_icon">
                                @if (isDatalex)
                                {
                                    <img src="~/img/phone-icon_datalex.png" />
                                }
                                else
                                {
                                    <img src="~/img/phone-icon.png"/>
                                }
                            </span>
                            <span style="margin-top: 14px;font-size: 1.2rem;">555 186 000</span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-4">
                        <div class="site_info">
                            <span class="info_icon">
                                @if (isDatalex)
                                {
                                    <img src="~/img/email-icon_datalex.png"/>
                                }
                                else
                                {
                                    <img src="~/img/email-icon.png"/>
                                }
                            </span>
                            <span style="margin-top: 14px;font-size: 1.2rem">carfishstore@gmail.com</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="menu_main">
            <div class="menu_text">
                <ul>
                    <li><a asp-action="List" asp-controller="Product" asp-area="@(isDatalex ? "Datalex" : "")">პროდუქტები</a></li>
                    <li> <a asp-action="Categories" asp-controller="Product">კატეგორიები</a> </li>
                    <li><a asp-action="ContactUs" asp-controller="Home">მიტანის პირობები</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- end Contact Us-->
    <!-- footer start-->
<div id="plant" class="footer layout_padding">
    <div class="container">
        <p>© @curYear ყველა უფლება დაცულია</p>
    </div>
</div>

<!-- Messenger Chat plugin Code -->
<div id="fb-root"></div>

<!-- Your Chat plugin code -->
<div id="fb-customer-chat" class="fb-customerchat">
</div>

<script>
      var chatbox = document.getElementById('fb-customer-chat');
      chatbox.setAttribute("page_id", "103673841601429");
      chatbox.setAttribute("attribution", "biz_inbox");
    </script>

<!-- Your SDK code -->


@RenderSection("Scripts", required: false)
<script src="~/js/navbar/customNavbar.js"></script>
<script>
    window.fbAsyncInit = function () {
        FB.init({
            xfbml: true,
            version: 'v17.0'
        });
    };

    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
</script>
</body>
</html>
